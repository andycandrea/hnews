<%= content_tag :div, class: div_class do -%>
  Posted by <strong><%= resource.user.try(:name) || 'Anon' %></strong> 
  <%= format_date(resource.created_at) %>
  <% if comment_link %>
    <%= " | " %>
    <%= link_to pluralize(resource.num_comments, 'Comment'), article_path(resource) %>
  <% end %>
<% end -%>

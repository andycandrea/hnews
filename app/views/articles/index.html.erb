<% @articles.each do |article| %>
  <div class="article-div">
    <div>
      <span class="article-title">
        <strong><%= article.title %></strong>
      </span>

      <span class="article-url">
        <% if article.url? %>
          <%= link_to "(#{article.url})", article.url %>
        <% else %>
          <span>(text only)</span>
        <% end %>
      </span>
    </div>

    <div class="article-date">Posted at <%= article.created_at %></div>

    <% if article.content? %>
      <div class="article-content">
        <%= article.content %>
      </div>
    <% end %>

  </div>
<% end %>

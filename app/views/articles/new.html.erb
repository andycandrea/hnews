<%= simple_form_for @article, url: submit_path, method: :post do |f| %>
  <%= render "shared/form_errors", object: f.object %>
  <%= f.input :title, error: false, input_html: { class: 'form-control' } %>
  <%= f.input :url, as: :url, error: false, input_html: { class: 'form-control' } %>
  <%= f.input :content, input_html: { class: 'form-control' } %>
  <%= f.button :submit, 'Submit' %>
<% end %>

<br>

<%= link_to 'Back to Home', root_path %>

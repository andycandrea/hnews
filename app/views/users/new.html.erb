<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <strong>The following errors prevented this user from being created:</strong>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @user do |f| %>
  <%= f.input :name, error: false, label: 'Username', input_html: { class: 'form-control' } %>
  <%= f.input :email, error: false, input_html: { class: 'form-control' } %>
  <%= f.input :password, error: false, input_html: { class: 'form-control' } %>
  <%= f.input :password_confirmation, error: false, input_html: { class: 'form-control' } %>
  <%= f.button :submit, 'Submit' %>
<% end %>

<%= link_to 'Back to Home', root_path %>

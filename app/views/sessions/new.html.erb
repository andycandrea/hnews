<%= simple_form_for @session, url: signin_path, method: :post do |f| %>
  <%= render 'shared/form_errors', object: f.object %>
  <%= f.input :name, error: false, input_html: { class: 'form-control' } %>
  <%= f.input :password, error: false, input_html: { class: 'form-control' } %>
  <%= f.button :submit, 'Submit' %>
<% end %>

<br>

<div>Forgot your password? <%= link_to 'Click here', reset_path%></div>
<div>Don't have an account? <%= link_to 'Sign up now.', signup_path %></div>
